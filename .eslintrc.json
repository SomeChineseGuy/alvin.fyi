{
  "extends": [ 
    "airbnb",
    "airbnb-typescript",
    "airbnb-typescript-prettier"
  ],
  
  "parserOptions": {
    "project": ["./tsconfig.json", "./cypress.config.ts", "./craco.config.js"],
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 6
  },
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-console": 2,
    "no-param-reassign": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2
      }
    ]
  }
  
}